<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
		xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms" 
		prism:ViewModelLocator.AutowireViewModel="True" 
		x:Class="MovieReminder.SearchPage"
		Title="Search Movie"
		Padding="5">
	
	<ContentPage.Content>
		<StackLayout Margin="0,15,0,0">
			<Label Text="Search Movie" FontSize="14" FontAttributes="Bold"/>
			<Label Text="{Binding Path=SearchedMovie.PlotSummary}" 
									HorizontalOptions="FillAndExpand"/>
			<Image Source="{Binding Path=SearchedMovie.Poster}" Margin="0,5,0,0"
				HorizontalOptions="Fill" HeightRequest="320" IsVisible="{Binding Path=IsMovieFound}"/>
			<ScrollView>
				<StackLayout>
					<SearchBar Placeholder="Title..." Text="{Binding Path=SearchedMovie.Title}" 
						HorizontalOptions="FillAndExpand" FontSize="14" FontAttributes="Bold"
						SearchCommand="{Binding Path=SearchCommand}"/>

					<StackLayout>
						<Button Text="Plot summary" FontSize="14" FontAttributes="Bold" 
							HorizontalOptions="Start" HeightRequest="15" 
							Command="{Binding Path=TogglePlotCommand}"/>
						
						<Frame OutlineColor="Silver" HorizontalOptions="FillAndExpand" 
								HasShadow="false" IsVisible="{Binding Path=IsPlotVisible}">
							<Label Text="{Binding Path=SearchedMovie.Plot}" 
									HorizontalOptions="FillAndExpand"/>
						</Frame>
					</StackLayout>
					<StackLayout Margin="0,5,0,0">
						<Label Text="Theater release date" FontSize="14" FontAttributes="Bold"/>
						<StackLayout Orientation="Horizontal">
							<DatePicker Date="{Binding Path=SearchedMovie.TheaterReleaseDate}" 
								HorizontalOptions="FillAndExpand"
								IsEnabled="false"
								Format="yyyy-MM-dd"/>
							<Button Text="Add" FontSize="14" FontAttributes="Bold"/>
						</StackLayout>

						<Label Text="Physical media release date" FontSize="14" FontAttributes="Bold"/>
						<StackLayout Orientation="Horizontal">
							<DatePicker Date="{Binding Path=SearchedMovie.DvdReleaseDate}" 
								HorizontalOptions="FillAndExpand"
								IsEnabled="false"
								Format="yyyy-MM-dd"/>
							<Button Text="Add" FontSize="14" FontAttributes="Bold"/>
						</StackLayout>
					</StackLayout>
				</StackLayout>
			</ScrollView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
